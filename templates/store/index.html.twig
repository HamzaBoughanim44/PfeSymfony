<div class="container-fluid mt-3 mb-3">
    <div class="row g-2">
      {% for product in products %}
        <div class="col-md-4 col-sm-6 col-md-3 col-lg-3">
            <div class="card">
                <div class="img-container">
                    <div class="d-flex justify-content-between align-items-center p-2 first"> 
                    <span class="percent">-25%</span>
                     <span class="wishlist"><i class="fa fa-heart"></i></span> 
                     </div> <img src="{{ asset('/images/'~product.image)}}" class="img-fluid">
                </div>
                <div class="product-detail-container">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">{{product.nomep}}</h6>
                         <span class="text-danger font-weight-bold">{{(product.price)/100}}MAD</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <div class="ratings"> <i class="fa fa-star"></i> <span>4.5</span> </div>
                        <div class="size"> 
                        <label class="radio"> 
                        <input type="radio" name="size1" value="small">
                         <span>S</span> </label>
                          <label class="radio"> 
                          <input type="radio" name="size1" value="Medium" checked> 
                          <span>M</span> </label> 
                          <label class="radio"> <input type="radio" name="size1" value="Large">
                           <span>L</span> </label> </div>
                    </div>
                    <div class="mt-3"><a href="{{path('app_content',{'id' :product.id} )}}"> <button class="btn btn-primary btn-block">Buy Now</button></a> </div>
                </div>
            </div>
        </div>
      {% endfor %}   
    </div>
     <section id="learn" class="py-3" >
  <div class="container"> 
  <div class="row text-center ">
  <div class="navigation " >
    {{ knp_pagination_render(products) }}
   </div>
 </div>
</div>
</section>
 </div>       
  



 
  

{% endblock %}
